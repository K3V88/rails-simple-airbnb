<div class="container mt-5">
  <h1 class="mb-4">Available Flats</h1>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body text-center">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><i class="fas fa-map-marker-alt" style="color: orange;"></i> <%= flat.address %></p>
            <p class="card-text"><%= flat.description %></p>
            <p class="card-text"><i class="fas fa-bed"></i> <%= flat.number_of_guests %> guests</p>
            <p class="card-text"><i class="fas fa-money-bill-wave" style="color: green;"></i> <%= flat.price_per_night %> per night</p>
            <%= link_to "View Details", flat_path(flat), class: "btn btn-primary" %>
            <%= link_to "Delete", flats_path(@flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },  class: "btn btn-danger" %>
            <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-warning" %>
          </div>

        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    <%= link_to "Create a New Flat", new_flat_path, class: "btn btn-success" %>
  </div>
</div>
